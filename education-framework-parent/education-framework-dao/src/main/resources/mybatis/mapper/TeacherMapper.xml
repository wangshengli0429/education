<!--     时间格式化	 date_format(created_at,'%Y-%m-%d %H:%i:%s') as created_at, -->
    	from t_teacher 
    	
    	<where>
	    	 <if test="id!=null and id!=''"> AND id=#{id}</if>
	    	 <if test="userId!=null and userId!=''"> AND user_id = #{userId}</if>
	    	 <if test="teacherName!=null and teacherName!=''"> AND teacher_name = #{teacherName}</if>
    	</where> 
    </select>
    
    <select id="findAllTeacher" parameterType="java.util.Map" resultType="teacher">
        select
        id,user_id,teacher_name,gender,age,native_place,province,city,district,address,id_number,education,major,self_descr,photo,remark
        from t_teacher t
		<where>
	    	 <if test="id!=null and id!=''"> AND id=#{id}</if>
	    	 <if test="userId!=null and userId!=''"> AND user_id = #{userId}</if>
	    	 <if test="teacherName!=null and teacherName!=''"> AND teacher_name = #{teacherName}</if>
    	</where> 
        order by t.id asc
        <if test="rowStart != null and pageSize != null">
         limit ${rowStart}, ${pageSize}
        </if>
    </select>
    
     <select id="findTeacherCount" parameterType="java.util.Map" resultType="java.lang.Integer">
